{
    "version": 6,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 28,
        "patch": 0
    },
    "include": [
        "preset.toolchains.json",
        "preset.deps.json"
    ],
    "configurePresets": [
        {
            "name": "flatc",
            "hidden":  true,
            "generator": "Ninja",
            "inherits": "flatbuffers",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "FLATBUFFERS_BUILD_FLATC": true,
                "FLATBUFFERS_STATIC_FLATC": true,
                "BUILD_EXTENSION": false
            }
        },
        { "name": "flatc-llvm", "inherits": ["flatc","clang-msys2-clang64"] },
        { "name": "flatc-gcc",  "inherits": ["flatc", "gcc-msys2-ucrt64"] },
        { "name": "flatc-msvc",  "inherits": ["flatc", "msvc-windows"] },
        {
            "name": "gdextension",
            "hidden": true,
            "inherits": [
                "godot",
                "godot-cpp",
                "flatbuffers"
            ],
            "cacheVariables": {
                "GDE_NAME": "gdflatbuffers"
            }
        },
        { "name": "x64-windows-msys2-llvm",  "inherits": ["gdextension","clang-msys2-clang64"] },
        { "name": "x64-windows-msys2-gcc",  "inherits": ["gdextension","gcc-msys2-ucrt64"] },
        { "name": "x64-windows-msvc",  "inherits": ["gdextension","msvc-windows"] }
    ],
    "buildPresets": [
        {
            "name": "multi-llvm",
            "configurePreset": "x64-windows-msys2-llvm",
            "inheritConfigureEnvironment": true
        },
        {
            "name": "multi-gcc",
            "configurePreset": "x64-windows-msys2-gcc",
            "inheritConfigureEnvironment": true
        }
    ]
}
